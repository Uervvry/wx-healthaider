/* pages/mine/addDevice.wxss */

page {
  width: 100%;
  height: 100%;
  color: white;
  background-color: #0f79b5;
  overflow: hidden;
}

.container {
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: fixed;
}

.banner-img {
  width: 100%;
  height: 100%;
}

.classname {
  position: absolute;
  top: 20rpx;
}

.allInfo {
  position: absolute;
  top: 20rpx;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.device-contain {
  color: white;
  padding-left: 30rpx;
  padding-top: 40rpx;
  padding-bottom: 50rpx;
}

.device-img {
  width: 120rpx;
  height: 120rpx;
}

.device-img-item {
  width: 100%;
  height: 100%;
}

.device-info {
  align-items: flex-start;
  padding-left: 20rpx;
  font-size: 30rpx;
}

.device-id {
  padding-top: 22rpx;
}

.cancle-bangding {
  width: 250rpx;
  color: #666;
  line-height: 75rpx;
  height: 75rpx;
}

.person-text {
  padding-left: 30rpx;
  font-size: 30rpx;
}

.section {
  margin-top: 50rpx;
  height: 378rpx;
  border-top: 1px solid #1082bf;
  border-bottom: 1px solid #1082bf;
  background: rgba(255, 255, 255, 0.05);
  box-sizing: border-box;
}

.section-item {
  height:78rpx;
}

.section-head {
  height: 144rpx;
}

.head {
  width: 100rpx;
  height: 100rpx;
  background: #ccc;
  margin:0 50rpx 0 300rpx;

}

.head image {
  width: 80%;
  height: 80%;
  margin: 10rpx 10rpx;
}

.section-item-head-text {
  height: 120rpx;
  font-size: 30rpx;
 
}
.section__title{
    width: 200rpx;
    text-align: center;
}
.section-item-1 {
  width: 95%;
  float: right;
  border-bottom: 1px solid #1082bf;
  box-sizing: border-box;
}

.section-item-2 {
  border-bottom: 1px solid #1082bf;
  width: 95%;
  float: right;
  box-sizing: border-box;
}
.section-item-3{
    width: 95%;
  float: right;
}

.iconfont {
  font-size: 50rpx;
}

.section-item-text {
  font-size: 30rpx;
}

.btn-area {
  width: 80%;
  color: #09bb07;
  margin: 160rpx auto;
}

.btn-area button {
  color: #09bb07;
  width: 100%;
  height: 74rpx;
  line-height: 74rpx;
  margin: 15rpx;
}

.action-sheet-box {
  color: black;
}

.picker-view-column {
  padding-left: 100rpx;
}

.button-box {
  color: #666 !important;
}
