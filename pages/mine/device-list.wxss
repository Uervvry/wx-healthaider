page{
  width: 100%;
  height: 100%;
  color: white;
  background-color: #0f79b5;
}
.container{
    width: 100%;
    height: 100%;
}
.bg-img-box{
    width: 100%;
    height: 100%;
    position: relative;
    z-index: -1;
}
.bg-img{
    width: 100%;
    height: 100%;
}
.contain-box{
    position: absolute;
    z-index: 9999;
    top:10px;
    width: 100%;
    text-align: center;
     border-top: 1rpx solid #1082bf;
    margin-top: 30rpx;
}
.add-carePerson-img{
    width: 294rpx;
    height: 294rpx;
    margin: 30rpx auto;
}
.add-carePerson-img image{
    width: 100%;
    height: 100%;
    float: left;
}
.add-carePerson-img text{
    float: left;
    font-size:24rpx;
    margin-top:-100rpx;
    margin-left: 80rpx;
}
.carePerson-list{
    width: 100%;
   
}
.carePerson-li-item{
    width: 100%;
    height: 184rpx;
    border-bottom: 1rpx solid white;
}
.carePerson-img{
    width:124rpx;
    height: 124rpx;
    margin-left: 30rpx;
    background-color: #ccc;
}
.carePerson-img image{
    width: 100%;
    height: 100%;
}
.carePerson-info{
    height: 124rpx;
    align-items: flex-start;
    padding-left: 30rpx;
}
.carePerson-name{
    font-size: 30rpx;
    flex:1;
    padding-top: 10rpx;
}
.carePerson-id{
    font-size: 24rpx;
    flex: 0.5;
}
.carePerson-pname{
    font-size: 24rpx;
    color:#0c173d;
    flex: 0.5;
}
.carePerson-info-more{
    padding-left: 130px;
}